<div class = "container">
    <table class="table">
        <thead>
            <tr>
            <th scope="col">Company</th>
            <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
        <% @bikes.each do |mob|%>
            <tr>
                <td><%= mob.company %></td>
                <td><%= link_to "Edit", edit_bike_path(mob.id) %></td>
                <td><%= link_to "Show", bike_path(mob.id) %></td>
                <td><%= button_to "Delete", bike_path(mob), method: 'delete' %></td>
            </tr>    
            <% end %>
        </tbody>
    </table>
</div>